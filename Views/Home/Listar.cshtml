@model List<AtividadeSA3MVC.Models.Pessoa>
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<h1>@ViewData["Title"]</h1>
<table class="table">
    
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
             
                <td>@pessoa.Nome</td>
                <td>@pessoa.idade</td>
              
            </tr>

        }
    </tbody>
</table>

